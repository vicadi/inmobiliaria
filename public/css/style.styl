/*Mixins*/
  buton-image(url,urlHover)
    .icon 
      float left  
      width 50px
      height 55px 
      background-size 100%
      background-image url(url) 
      background-repeat no-repeat
    .icon:hover 
      cursor pointer
      background-image url(urlHover)
/*base*/
  body
    background url("/images/fondo.png")
    background-size 100%
    margin 0px
    padding 0px
    overflow-x hidden

  #contenido
    width 80%
    height 96%
    float left
    margin 4% 10% 0 10%
    background-color white
    position absolute
    border-radius 10px 10px 0px 0px
    bottom 0

  #heaer
    width 100%
    float left

  nav 
    .navbar-brand img
      width 25%
      position absolute
    
    li 
      a:hover
        background-color #337ab7 !important
        color white !important
        border-radius 10px
        
    .active
      background-color #4CAF50
      color white !important
      border-radius 10px
    
    #bs-example-navbar-collapse-1
      margin-top 5%

  .navbar-default
    background-color transparent !important
    border-color transparent !important

  .footer
    left 0
    bottom 0 !important
    float left
    width 100%
    height 60px
    background-color #f5f5f5
    border-top 2px dotted #999

    .izquierda
      width 50%
      float left
      text-align left

      a
        color #337ab7
        float left
        padding 3%

      a:hover
        color #4CAF50
        text-decoration none

    .derecha
      width 50%
      float right
      text-align right

      img
        width 22%
        padding 1%
        
  #blockContent
    width 100%
    margin 2% 0 0 0
    min-height 500px
    float left
    background-color white

/*Index*/
  #slider
    width 102%
    float left
    margin 3% -1% 
    height 420px
    border 10px solid #4CAF50
    background-color #4CAF50
    ul 
      width 50%
      margin 10px 25%
      height 380px
    li 
      width 100%
      height 380px
      img
        width 100% 
        height 380px
      .sb-description
        float left
        a 
          width 100%
          float left
          text-align center
          color black
        a:hover
          text-decoration none
  .nav-arrows 
    a
      margin 4% 10% !important
  
  #informacion
    width 100%
    float left
    
    div 
      width 30%
      float left
      border-radius 10px
      border 10px groove #337ab7
      
      h3
        color black
        width 100%
        float left
        text-align center
      
      img 
        width 90%
        margin 2% 5%

    .izquierda      
      margin 2% 0 2% 2%
    
    .centro
      margin 2% 3%
    
    .derecha
      margin 2% 2% 2% 0  
  
  #redes
    width 100%
    float left
    margin -1% 31%
    div 
      margin 3% 4%
    a.facebook
      buton-image("/images/facebook.png","/images/facebookHover.png")
    a.twitter
      buton-image("/images/twitter.png","/images/twitterHover.png")
    a.google
      buton-image("/images/google.png","/images/googleHover.png")  
  
  #datos
    width 100%
    float left
    margin 1% 0
    
    p 
      width 100%
      text-align center
      color grey
      font-size 12px

/*Responsive*/
  @media (max-width:800px)
    nav img
      width 20% !important
    
    .footer
      height 40px

      .izquierda
        width 70% !important

        a
          padding 2% !important

      .derecha
        width 30% !important

        img
          width 50% !important
    
    #slider
      height 220px !important
      ul 
        height 180px !important
      li 
        height 180px !important
        img
          height 180px !important
    .nav-arrows 
      a
        margin -10% 5% !important
      
    #informacion    
      div
        width 70% !important
        margin 2% 15% !important 